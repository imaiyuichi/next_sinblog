{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "YT": true,
    "onYouTubePlayerAPIReady": true,
    "dataLayer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:astro/recommended"],
  "rules": {
    "no-irregular-whitespace": "off"
  },
  "ignorePatterns": ["/node_modules/", "/dist/"]
}
