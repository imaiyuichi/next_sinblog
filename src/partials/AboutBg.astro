<canvas id="webgl"></canvas>
<span id="scrollProgress"></span>
<section class="root">
  <div class="inner">
    <h2 class="title js-title"></h2>
  </div>
</section>

<script>
  import { startMyAnimation } from '../script/module/mv.js';
  import Typed from 'typed.js';

  startMyAnimation();

  new Typed('.js-title', {
    strings: ['Welcome to my website', 'このコンテンツは<br>現在準備中です。'],
    typeSpeed: 140,
    backDelay: 2000,
    backSpeed: 40,
  });
</script>

<style lang="scss">
  @import '../styles/_single';
  @import 'https://fonts.googleapis.com/css2?family=DotGothic16&display=swap';

  .root {
    height: 200vh;
  }

  .inner {
    padding: vw(150) 0 0;
    text-align: center;

    @include sp() {
      padding: vw_sp(250) 0 0;
    }
  }

  .title {
    display: inline-block;
    font-family: 'DotGothic16', sans-serif;
    font-size: vw(55);
    font-weight: 700;
    line-height: 1.5;
    color: white;
    text-align: center;

    @include sp() {
      font-size: vw_sp(55);
    }
  }

  canvas {
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
  }
</style>
