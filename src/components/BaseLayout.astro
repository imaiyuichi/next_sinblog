---
import PageNumber from './PageNumber.astro';

interface Props {
  id?: string;
  background?: string;
  color?: string;
  current: number;
  total: number;
}

const { id, background, color, current, total } = Astro.props;
---

<section class="root" id={id}>
  <div class="bg" data-background={background}>
    <div class="inner">
      <slot />
    </div>
  </div>
  {
    current && (
      <div class="pageNumber">
        <PageNumber color={color} current={current} total={total} />
      </div>
    )
  }
</section>

<style lang="scss">
  @import '../styles/_single';

  .root {
    position: relative;
  }

  .bg {
    &[data-background='gray'] {
      background-color: $color-base-gray;
    }
  }

  .inner {
    width: vw(1280);
    padding: vw(80) 0 vw(100);
    margin: auto;
    border-right: 1px solid $color-base-white;
    border-left: 1px solid $color-base-white;

    @include sp() {
      width: 100%;
      padding: vw_sp(40) 0 vw_sp(40);
    }

    [data-background='gray'] & {
      border-right: 1px solid $color-base-black;
      border-left: 1px solid $color-base-black;
    }

    @include sp() {
      width: 100%;
    }
  }

  .pageNumber {
    position: absolute;
    top: 50%;
    left: vw(5);
    transform: translateY(-50%);

    @include sp() {
      left: vw_sp(-27);
    }
  }
</style>