<style lang="scss">
  @import "../styles/_single";

  .body {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .loader {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 400px;
    height: 400px;
  }

  .loader span {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid #43da2a;
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    animation: animate 5s linear infinite;
  }

  .loader span:nth-child(2) {
    border-radius: 55% 45% 41% 59% / 24% 78% 22% 76%;
    animation-duration: 4s;
    animation-direction: reverse;
  }

  .loader span:nth-child(3) {
    border-radius: 52% 48% 48% 52% / 81% 82% 18% 19%;
    animation-duration: 3s;
  }

  @keyframes animate {
    0% {
      transform: rotate(0);
    }

    100% {
      transform: rotate(360deg);
    }
  }

  .title {
    font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
      "Lucida Sans", Arial, sans-serif;
    font-size: 2rem;
    font-weight: 700;
  }
</style>
