<header class="header">
  <div class="bg"></div>
  <div class="inner">
    <h1 class="title text-gradient"></h1>
    <nav class="nav">
      <ul class="list">
        <li class="item">
          <a class="link" href=""> <p class="text01"></p></a>
        </li>
        <li class="item">
          <a class="link" href=""><p class="text02"></p></a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  import Typed from "typed.js";

  // タイトルのアニメーション
  new Typed(".title", {
    strings: ["Yuu Blogs"],
    typeSpeed: 50,
    backDelay: 2000,
    startDelay: 9000,
    backSpeed: 40,
    showCursor: false,
  });

  // text01のアニメーション
  new Typed(".text01", {
    strings: ["About"],
    typeSpeed: 50,
    backDelay: 2000,
    startDelay: 9500,
    backSpeed: 40,
    showCursor: false,
  });

  // text02のアニメーション
  new Typed(".text02", {
    strings: ["Blogs"],
    typeSpeed: 50,
    backDelay: 2000,
    startDelay: 10000,
    backSpeed: 40,
    showCursor: false,
  });
</script>

<style lang="scss">
  @import "../styles/_single.scss";
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500&display=swap");

  .header {
    position: relative;
    width: 100%;
    height: vw(110);
    position: fixed;
    top: 0;
    backdrop-filter: blur(10px);
    z-index: 999;

    @include sp() {
      height: vw_sp(60);
    }

    &::before {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 8px;
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
      background-size: 400%;
      background-position: 0%;
      z-index: -1;
    }
  }

  .inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: vw(1200);
    height: 100%;
    margin: auto;

    @include sp() {
      width: vw(1400);
    }
  }

  .title {
    padding: vw(10) 0 0;
    height: 100%;
    font-family: "DotGothic16", sans-serif;
    font-size: vw(55);

    @include sp() {
      padding: vw_sp(5) 0 0;
      font-size: vw_sp(30);
    }
  }

  .list {
    display: flex;
    gap: vw(20);
  }

  .nav {
    height: 100%;
  }

  .list {
    height: 100%;
  }

  .item {
    width: vw(100);
    height: 100%;

    @include sp() {
      width: vw_sp(60);
    }
  }

  .link {
    height: 100%;
  }

  .text01,
  .text02 {
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    color: #fff;
    font-family: "DotGothic16", sans-serif;
    font-size: vw(20);

    @include sp() {
      font-size: vw_sp(20);
    }
  }
</style>
