<header class="header">
    <div class="bg"></div>
    <div class="inner">
        <h1 class="logo text-gradient">Yuu Blogs</h1>
    </div>
</header>

<style lang="scss">
    @import '../styles/_single.scss';
    .header {
        position: relative;
        width: 100%;
        height: vw(110);
        position: fixed;
        top: 0;
        backdrop-filter: blur(10px);
        z-index: 999;

        &::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(
                rgba(var(--accent-dark), 66%),
                rgba(var(--accent-dark), 33%)
            );
            background-size: 400%;
            background-position: 0%;
            z-index: -1;
        }
    }

    .inner {
        font-size: vw(20);
        color: #fff;
        width: vw(1200);
        height: 100%;
        margin: auto;
    }

    .logo {
        padding: vw(10) 0 0;
        height: 100%;
    }
</style>
