---
import Layout from '../layouts/Layout.astro';
import BaseHeader from './BaseHeader.astro';
import WorkParticle from '../partials/Work.astro';
---

<Layout title="Welcome to Astro.">
    <BaseHeader />
    <main class="main">
        <WorkParticle />
    </main>
</Layout>

<style lang="scss">
    @import '../styles/_single.scss';
    .main {
        width: vw(1200);
        margin: auto;
        padding: vw(110) 0;

        @include sp() {
            width: 100%;
            padding: 0 vw_sp(30);
        }
    }

    .test {
        position: relative;
        top: -35rem;
        font-size: vw(80);
        color: #fff;
    }
</style>
