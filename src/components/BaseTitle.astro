---
import ImageWrapper from '../components/ImageWrapper.astro';
import ViewElement from '../components/ViewElement.astro';
import AnimationBlur from '../components/AnimationBlur.astro';

interface Props {
  title: {
    url: string;
    width: number;
    height: number;
  };
}

const { title } = Astro.props;
---

<ViewElement ratio="-20%">
  <AnimationBlur>
    <h2 class="title">
      <ImageWrapper
        src={title.url}
        width={title.width}
        height={title.height}
        alt=""
        classValue="h-100"
      />
    </h2>
  </AnimationBlur>
</ViewElement>

<style lang="scss">
  @import '../styles/_single';

  .title {
    height: vw(80);
    text-align: center;
  }
</style>
