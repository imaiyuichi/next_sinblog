---
import * as Variables from '../variables.astro';
interface Props {
  lowerTitel: string;
  lowerTitelSecond?: string;
}

const { lowerTitel, lowerTitelSecond } = Astro.props;
---

<div class="root">
  <div class="inner">
    <a href={Variables.PAGES.index.url} class="page"
      >{Variables.PAGES.index.name}</a
    >
    <span>&gt</span>
    {
      lowerTitelSecond ? (
        <>
          <a class="page" href={Variables.PAGES.article.url}>
            {Variables.PAGES.article.name}
          </a>
          <span>&gt</span>
          <p class="lower">{lowerTitelSecond}</p>
        </>
      ) : (
        <p class="lower">{lowerTitel}</p>
      )
    }
  </div>
</div>

<style lang="scss">
  @import '../styles/_single';

  .root {
    border-bottom: 1px solid $color-base-black;
  }

  .inner {
    display: flex;
    gap: vw(11);
    align-items: baseline;
    padding: vw(17) vw(30);

    @include sp () {
      gap: vw_sp(8);
      align-items: center;
      padding: vw_sp(5) vw_sp(10);
    }
  }

  .page {
    display: block;
    font-size: vw(12);
    line-height: 1;
    border-bottom: 1px solid $color-base-black;

    @include sp () {
      font-size: vw_sp(10);
    }
  }

  .lower {
    font-size: vw(12);
    font-weight: 700;
    line-height: 1;

    @include line-clamp(1);

    @include sp () {
      font-size: vw_sp(10);
    }
  }
</style>
