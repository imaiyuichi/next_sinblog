---
import Layout from "../layouts/Layout.astro";
import BaseHeader from "../components/BaseHeader.astro";
// import IndexAbout from '../partials/IndexAbout.astro';
---

<Layout title="Welcome to Astro.">
  <BaseHeader />
  <main class="main">
    <section class="root">
      <div class="inner">
        <h2 class="title js-title"></h2>
        <div class="canvas">
          <canvas></canvas>
        </div>
      </div>
    </section>
  </main>

  <script>
    import { canvasAnimation } from "../script/module/canvasAnimation.js";
    import Typed from "typed.js";

    canvasAnimation();

    new Typed(".js-title", {
      strings: ["Welcome to my website", "このコンテンツは現在準備中です。"],
      typeSpeed: 140,
      backDelay: 2000,
      backSpeed: 40,
    });
  </script>

  <style lang="scss">
    @import "../styles/_single.scss";
    .main {
      width: vw(1200);
      margin: auto;
      padding: vw(110) 0;

      @include sp() {
        width: 100%;
        padding: 0 vw_sp(30);
      }
    }
    .inner {
      padding: vw(150) 0 0;
      text-align: center;

      @include sp() {
        padding: vw_sp(250) 0 0;
      }
    }

    .title {
      display: inline-block;
      font-size: vw(55);
      font-weight: 700;
      line-height: 1.5;
      text-align: center;
      font-family: "DotGothic16", sans-serif;
      color: white;

      @include sp() {
        font-size: vw_sp(55);
      }
    }

    .canvas {
      width: 100%;
      height: 500px;
      margin: vw(100) 0 0;
    }
    canvas {
      border: 1px solid #fff;
    }
  </style>
</Layout>
