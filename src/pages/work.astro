---
import Layout from '../layouts/Layout.astro';
import BaseHeader from '../components/BaseHeader.astro';
// import IndexAbout from '../partials/IndexAbout.astro';
---

<Layout title="Welcome to Astro.">
    <BaseHeader />
    <main class="main">
        <div class="canvas">
            <canvas></canvas>
        </div>
    </main>
</Layout>

<script>
    import { canvasAnimation } from '../script/module/canvasAnimation.js';
    canvasAnimation();
</script>

<style lang="scss">
    @import '../styles/_single.scss';
    .main {
        width: vw(1200);
        margin: auto;
        padding: vw(110) 0;

        @include sp() {
            width: 100%;
            padding: 0 vw_sp(30);
        }
    }

    .canvas {
        width: 100%;
        height: 500px;
    }
    canvas {
        border: 1px solid #fff;
    }
</style>
