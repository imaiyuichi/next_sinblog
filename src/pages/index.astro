</script>

<style lang="scss">
  @import '../styles/_single';

  .main {
    font-family: $font-family-termina;

    @include sp() {
      width: 100%;
    }
  }

  .webGl {
    position: relative;
  }

  .canvas {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100% !important;
    height: 100vh;
  }
</style>
