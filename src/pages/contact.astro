---
import { getTop } from '../libs/macrocms';
import Layout from '../layouts/Layout.astro';

const topData = await getTop({
  fields: ['metaInfo'],
});

const { metaInfo } = topData;
---

<Layout {...metaInfo} pageType="contact">
  <main class="main">
    <section class="root">
      <div class="inner">
        <h2 class="title js-title"></h2>
        <div class="canvas"></div>
      </div>
    </section>
  </main>
</Layout>

<script>
  import Typed from 'typed.js';
  new Typed('.js-title', {
    strings: ['Welcome to my website', 'このコンテンツは現在準備中です。'],
    typeSpeed: 140,
    backDelay: 2000,
    backSpeed: 40,
  });
</script>

<style lang="scss">
  @import '../styles/_single';

  .main {
    width: vw(1200);
    padding: vw(110) 0;
    margin: auto;

    @include sp() {
      width: 100%;
      padding: 0 vw_sp(30);
    }
  }

  .inner {
    padding: vw(150) 0 0;
    text-align: center;

    @include sp() {
      padding: vw_sp(250) 0 0;
    }
  }

  .title {
    display: inline-block;
    font-family: 'DotGothic16', sans-serif;
    font-size: vw(55);
    font-weight: 700;
    line-height: 1.5;
    color: white;
    text-align: center;

    @include sp() {
      font-size: vw_sp(55);
    }
  }

  .canvas {
    width: 100%;
    height: 500px;
    margin: vw(100) 0 0;
  }

  canvas {
    border: 1px solid #ffffff;
  }
</style>
